<div class="container" style="width: 500px;">
<h2 class="text-center">Log in</h2>

<div class="text-center" style="margin-top: 20px;">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs text-center" style="margin-left: 150px;">
    <div style="width:50px;" ><%= f.input :email, required: false, autofocus: true %> </div>
    <div style="width:50px;"> <%= f.input :password, required: false %> </div>
    <div style="margin-right: 120px;"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<div class="text-center" style="height: 10px; margin-right: 5px; margin-top:10px;">

</div>
</div>

</div>