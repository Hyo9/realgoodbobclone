    <h2>여행사진</h2>
    <div class="imagegogo">
    <%= form_for [post, post.replies.build] do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title%>
    </p>
    <p>
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit %>
    </p>
    <% end %>
    </div>

   


<% post= @post4 %>

<div class="row">
  <% post.replies.each do |reply| %>
    <div class="col-xs-6 col-md-3">
      <% if reply.image.url %>
      <p class="thumbnail text-center" style="padding-bottom: 10px; padding-top: 10px;">
      <%= reply.title %>
      <img src="<%= reply.image.url %>" style="width: 242px; height: 200px; margin-top: 10px;"/>
      <% end %>
      </p>
    </div>
  <% end %>
</div>


