<h2>photos</h2>
<% @post4.replies.each do |reply| %>
<p>
  <% if reply.image.url %>
  <p><%= reply.title %></p>
  <img src="<%= reply.image.url %>"/>
  <% else %>
  <span>no image</span>
  <% end %>
</p>
<% end %>

<h2>upload image</h2>
<div class="imagegogo">
<%= form_for [@post4, @post4.replies.build] do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title%>
</p>
<p>
  <%= f.label :image %><br>
  <%= f.file_field :image %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
</div>




